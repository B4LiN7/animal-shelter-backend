datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["rhel-openssl-1.0.x"]
}

//  The docs: https:

model User {
  userId         String         @id @default(uuid())
  username       String         @unique
  name           String?
  email          String?
  hashedPassword String
  role           Role           @relation(fields: [roleName], references: [roleName])
  roleName       String
  createdAt      DateTime?      @default(now())
  updatedAt      DateTime?      @updatedAt
  locations      Location[]     @relation(name: "LocationToUser")
  adoptions      Adoption[]     @relation(name: "AdoptionToUser")
  loginHistory   LoginHistory[] @relation(name: "LoginHistoryToUser")
}

model LoginHistory {
  loginId   Int      @id @default(autoincrement())
  userId    String
  loginTime DateTime @default(now())
  ipAddress String?
  userAgent String?
  user      User     @relation(name: "LoginHistoryToUser", fields: [userId], references: [userId])
}

model Location {
  locationId   Int     @id @default(autoincrement())
  userId       String
  name         String?
  country      String
  state        String?
  city         String
  zipCode      Int
  address      String
  addressExtra String?
  user         User    @relation(name: "LocationToUser", fields: [userId], references: [userId])
}

model Adoption {
  userId String
  petId  Int
  user   User   @relation(name: "AdoptionToUser", fields: [userId], references: [userId])
  pet    Pet    @relation(name: "AdoptionToPet", fields: [petId], references: [petId])

  @@id([userId, petId])
}

model Pet {
  petId       Int         @id @default(autoincrement())
  name        String?
  sex         Sex         @default(OTHER)
  description String?
  birthDate   DateTime?
  imageUrl    String?
  breedId     Int?
  breed       Breed?      @relation(name: "BreedToPet", fields: [breedId], references: [breedId])
  createdAt   DateTime?   @default(now())
  updatedAt   DateTime?   @updatedAt
  adoptions   Adoption[]  @relation(name: "AdoptionToPet")
  petStatus   PetStatus[] @relation(name: "PetToPetStatus")
}

model PetStatus {
  petStatusId Int      @id @default(autoincrement())
  status      Status   @default(UNKNOWN)
  from        DateTime @default(now())
  petId       Int
  pet         Pet      @relation(name: "PetToPetStatus", fields: [petId], references: [petId])
}

model Breed {
  breedId     Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  speciesId   Int?
  species     Species? @relation(name: "BreedToSpecies", fields: [speciesId], references: [speciesId])
  pets        Pet[]    @relation(name: "BreedToPet")
}

model Species {
  speciesId   Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  breeds      Breed[] @relation(name: "BreedToSpecies")
}

model Role {
  roleName     String       @id @unique @db.VarChar(255)
  friendlyName String?
  description  String?
  permissions  Permission[]
  users        User[]
}

enum Sex {
  FEMALE
  MALE
  OTHER
}

enum Status {
  UNKNOWN
  INCOMING
  INSHELTER
  ADOPTING
  ADOPTED
  ILL
  DECEASED
}

enum Permission {
  ACCESS_ANY_LOCATION
  ACCESS_ANY_USER

  UPDATE_USER_PERMISSIONS
  CREATE_USER
  GET_USERS
  GET_USERNAMES

  UPLOAD_IMAGE

  CREATE_LOCATION
  UPDATE_LOCATION
  DELETE_LOCATION

  START_ADOPTION
  SET_ADOPTION
  GET_ADOPTIONS

  CREATE_PET
  UPDATE_PET
  DELETE_PET

  CREATE_BREED
  UPDATE_BREED
  DELETE_BREED

  CREATE_SPECIES
  UPDATE_SPECIES
  DELETE_SPECIES
}
