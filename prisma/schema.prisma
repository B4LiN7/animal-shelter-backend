// The docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId         String         @id @default(uuid())
  username       String         @unique
  name           String?
  email          String?
  hashedPassword String
  role           Role           @default(USER)
  createdAt      DateTime?      @default(now())
  editedAt       DateTime?      @updatedAt
  locations      Location[]
  adoptions      Adoption[]
  loginHistory   LoginHistory[]
}

model LoginHistory {
  loginId   Int      @id @default(autoincrement())
  userId    String
  loginTime DateTime @default(now())
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [userId])
}

model Token {
  tokenId   Int       @id @default(autoincrement())
  userId    String
  token     String
  createdAt DateTime  @default(now())
  expiresAt DateTime?
}

model Location {
  locationId   Int     @id @default(autoincrement())
  userId       String
  name         String?
  country      String
  state        String?
  city         String
  zipCode      Int
  address      String
  addressExtra String?
  user         User    @relation(fields: [userId], references: [userId])
}

model Adoption {
  userId String
  petId  Int
  user   User   @relation(fields: [userId], references: [userId])
  pet    Pet    @relation(fields: [petId], references: [petId])

  @@id([userId, petId])
}

model Pet {
  petId       Int         @id @default(autoincrement())
  name        String?
  sex         Sex         @default(OTHER)
  description String?
  birthDate   DateTime?
  imageUrl    String?
  breedId     Int?
  breed       Breed?      @relation(fields: [breedId], references: [breedId])
  adoptions   Adoption[]
  petStatus   PetStatus[]
}

model PetStatus {
  petStatusId Int      @id @default(autoincrement())
  status      Status   @default(UNKNOWN)
  from        DateTime @default(now())
  petId       Int
  pet         Pet      @relation(fields: [petId], references: [petId])
}

model Breed {
  breedId     Int     @id @default(autoincrement())
  name        String
  description String?
  pets        Pet[]
}

enum Role {
  ADMIN
  USER
  SHELTER_WORKER
}

enum Sex {
  FEMALE
  MALE
  OTHER
}

enum Status {
  UNKNOWN
  INCOMING
  INSHELTER
  ADOPTING
  ADOPTED
  ILL
  DECEASED
}
